# Mode: fixed or volatile
MODE=fixed

# Sentiment distribution (used only in fixed mode)
SENTIMENT_POSITIVE=0.50
SENTIMENT_NEGATIVE=0.30
SENTIMENT_NEUTRAL=0.20

# Batch configuration
BATCH_SIZE=8000s
BATCH_INTERVAL_MS=1

# Volatility factor (used only in volatile mode)
VOLATILITY_FACTOR=0.8

# Kafka brokers (for Docker/Kubernetes flexibility)
KAFKA_BROKERS=localhost:9092